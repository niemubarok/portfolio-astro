---
import careerData from '../data/career.json';
---

<div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Central Line (Desktop) / Left Line (Mobile) -->
  <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 w-0.5 h-full bg-gradient-to-b from-primary-500/0 via-primary-500/50 to-primary-500/0"></div>

  <div class="space-y-12 md:space-y-0 relative">
    {
      careerData.map((job, index) => (
        <div class={`flex flex-col md:flex-row items-center justify-between w-full ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} group relative`}>
          
          <!-- Spacer for the other side (Desktop only) -->
          <div class="hidden md:block w-5/12"></div>

          <!-- Node -->
          <div class="absolute left-8 md:left-1/2 -translate-x-[5px] md:-translate-x-1/2 w-4 h-4 rounded-full bg-dark-bg border-2 border-primary-500 z-10 flex items-center justify-center group-hover:scale-150 transition-transform duration-300 shadow-[0_0_10px_rgba(var(--color-primary-500),0.5)]">
            <div class="w-1.5 h-1.5 rounded-full bg-primary-500 animate-pulse"></div>
          </div>

          <!-- Content Card -->
          <div 
            class="w-full md:w-5/12 pl-16 md:pl-0"
            data-aos={index % 2 === 0 ? "fade-left" : "fade-right"}
            data-aos-delay={index * 100}
          >
            <div class="relative p-6 rounded-2xl bg-dark-surface/40 backdrop-blur-md border border-white/5 hover:border-primary-500/30 transition-all duration-300 hover:-translate-y-1 hover:shadow-neon group-hover:bg-dark-surface/60">
              
              <!-- Decoration -->
              <div class="absolute -top-1 -right-1 w-20 h-20 bg-primary-500/10 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>

              <div class="relative z-10">
                <span class="inline-block px-3 py-1 rounded-full text-xs font-mono font-medium bg-primary-500/10 text-primary-300 mb-3 border border-primary-500/20">
                  {job.period}
                </span>
                
                <h3 class="text-xl font-bold text-white font-display mb-1 group-hover:text-primary-400 transition-colors">
                  {job.role}
                </h3>
                
                <div class="text-slate-400 font-medium mb-4 flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary-500 min-w-[16px]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                  {job.company}
                </div>

                <p class="text-slate-400 text-sm leading-relaxed mb-4">
                  {job.description}
                </p>

                <div class="flex flex-wrap gap-2">
                  {job.stack.map(tech => (
                    <span class="text-xs text-slate-500 bg-white/5 px-2 py-1 rounded border border-white/5 hover:border-white/10 transition-colors">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
