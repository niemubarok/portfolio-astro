---
const navItems = [
  { name: 'Home', href: '/', icon: '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>' },
  { name: 'Projects', href: '/#projects', icon: '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>' },
  { name: 'Skills', href: '/#skills', icon: '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>' },
  { name: 'Contact', href: '/#contact', icon: '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>' },
];
---

<!-- Floating Dock -->
<nav class="fixed bottom-6 left-1/2 -translate-x-1/2 z-50 transition-all duration-300 w-auto">
  <div class="flex items-center gap-1 sm:gap-2 px-2 py-2 rounded-full bg-dark-bg/30 backdrop-blur-2xl border border-white/10 shadow-[0_0_30px_rgba(0,0,0,0.3)] shadow-primary-500/10 hover:shadow-primary-500/20 transition-shadow duration-500">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="relative group flex items-center justify-center w-12 h-12 sm:w-auto sm:h-auto sm:px-5 sm:py-3 rounded-full hover:bg-white/5 transition-all duration-300"
          aria-label={item.name}
        >
          <!-- Icon -->
          <span class="text-slate-400 group-hover:text-primary-400 transition-colors duration-300" set:html={item.icon}></span>
          
          <!-- Text (Hidden on mobile, visible on desktop) -->
          <span class="hidden sm:block ml-2 text-sm font-medium text-slate-400 group-hover:text-white transition-colors duration-300">{item.name}</span>
          
          <!-- Hover Glow -->
          <span class="absolute inset-0 rounded-full bg-primary-500/10 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></span>
          
          <!-- Little dot indicator -->
          <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-1 h-1 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-y-1 group-hover:translate-y-0"></span>
        </a>
      ))}
  </div>
</nav>

