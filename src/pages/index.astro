---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import HolographicID from '../components/HolographicID.astro';
import ProjectCard3D from '../components/ProjectCard3D.astro';
import FloatingTech from '../components/FloatingTech.astro';
import TechBackground from '../components/TechBackground.astro';
import CodeBackground from '../components/CodeBackground.astro';
import SpaceBackground from '../components/SpaceBackground.astro';
import CareerTimeline from '../components/CareerTimeline.astro';
import { getCollection } from 'astro:content';
import skills from '../data/skills.json';
import siteData from '../data/site.json';
import FloatingWhatsAppProject from '../components/FloatingWhatsApp.astro';

// Get sorted projects
const projects = (await getCollection('projects'))
    .sort((a, b) => a.data.order - b.data.order)
    .slice(0, 6); // Top 3 projects

const featuredSkills = skills.slice(0, 8); // Top 8 skills
---

<Layout title={`${siteData.profile.name} - ${siteData.profile.title}`}>
    <Navbar />

    <main class="overflow-hidden">
        <!-- Hero Section (Artistic Asymmetry) -->
        <section
            class="relative min-h-screen w-full overflow-hidden flex items-center justify-center perspective-1000 bg-dark-bg py-20 lg:py-0"
        >
            <!-- Dynamic Space Background -->
            <SpaceBackground />

            <!-- Parallax Tech Background: Code Mode -->
            <TechBackground theme="code" speed={0.2} direction="up" />

            <!-- Artistic Decor: Abstract Blobs -->
            <div
                class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-primary-500/20 rounded-full blur-[120px] mix-blend-screen animate-float"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-10%] w-[600px] h-[600px] bg-purple-600/10 rounded-full blur-[150px] mix-blend-screen animate-float"
                style="animation-delay: 2s"
            >
            </div>

            <!-- Massive Artistic Typography (Background) -->
            <!-- <div
                class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full flex items-center justify-center pointer-events-none select-none z-0"
            >
                <span
                    class="text-[20vw] font-black font-display text-transparent bg-clip-text bg-gradient-to-r from-fuchsia-500/5 via-red-500/5 to-yellow-500/5 leading-none rotate-[-5deg] scale-150 blur-sm mix-blend-overlay"
                >
                    HUSNI
                </span>
            </div>
            <div
                class="absolute top-3/4 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full flex items-center justify-center pointer-events-none select-none z-0"
            >
                <span
                    class="text-[20vw] font-black font-display text-transparent bg-clip-text bg-gradient-to-r from-lime-400/5 via-cyan-500/5 to-violet-600/5 leading-none rotate-[-5deg] scale-150 blur-sm mix-blend-overlay"
                >
                    MUBAROK
                </span>
            </div> -->

            <div
                class="max-w-7xl w-full mx-auto px-4 z-10 grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-12 items-center h-full content-center"
            >
                <!-- Left Content: Asymmetric & Bold -->
                <div
                    class="lg:col-span-7 flex flex-col justify-center relative order-2 lg:order-1 pt-10 lg:pt-0 text-center lg:text-left"
                >
                    <!-- <div
                        class="mb-4 inline-flex self-start px-4 py-2 rounded-full border border-primary-500/30 bg-primary-500/10 backdrop-blur-md text-primary-300 font-mono text-xs uppercase tracking-widest"
                        data-aos="fade-right"
                    >
                        /// System Online
                    </div> -->

                    <h1
                        class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black font-display text-white mb-6 leading-[1.0] lg:leading-[0.9] tracking-tighter"
                        data-aos="fade-up"
                    >
                        Engineering, <br />
                        <span
                            id="dynamic-text"
                            class="text-transparent bg-clip-text bg-neon-gradient glitch relative inline-block whitespace-nowrap"
                            data-text="Digital Excellence."
                            >Digital Excellence.</span
                        >
                    </h1>

                    <p
                        id="typing-desc"
                        class="text-lg sm:text-xl text-slate-400 max-w-xl leading-relaxed mb-8 sm:mb-10 lg:border-l-4 lg:border-primary-500 lg:pl-6 mx-auto lg:mx-0 min-h-[84px] lg:min-h-[84px]"
                        data-aos="fade-up"
                        data-aos-delay="100"
                    >
                    </p>

                    <script>
                        // Dynamic Text Rotator
                        const phrases = [
                            'Digital Excellence.',
                            'Full Stack Mastery.',
                            'Scalable Systems.',
                            'Cloud Solutions.',
                            'Seamless UX/UI.',
                        ];
                        let index = 0;
                        const el = document.getElementById('dynamic-text');

                        if (el) {
                            setInterval(() => {
                                index = (index + 1) % phrases.length;
                                el.textContent = phrases[index];
                                el.setAttribute('data-text', phrases[index]);
                            }, 1000);
                        }

                        // Typing Animation for Description
                        const descText =
                            'Transforming complex requirements into robust, scalable, and user-centric digital solutions. Bridging the gap between powerful backend logic and immersive frontend experiences to drive business success.';
                        const descEl = document.getElementById('typing-desc');

                        if (descEl) {
                            let charIndex = 0;

                            function typeWriter() {
                                if (charIndex < descText.length) {
                                    descEl!.textContent +=
                                        descText.charAt(charIndex);
                                    charIndex++;
                                    setTimeout(typeWriter, 15); // Typing speed
                                } else {
                                    // Optional: Add blinking cursor at the end
                                    descEl!.innerHTML +=
                                        '<span class="animate-pulse">|</span>';
                                }
                            }

                            // Start typing after a slight delay
                            setTimeout(typeWriter, 500);
                        }
                    </script>

                    <div
                        class="flex flex-wrap gap-4 sm:gap-6 justify-center lg:justify-start"
                        data-aos="fade-up"
                        data-aos-delay="200"
                    >
                        <a
                            href="#projects"
                            class="relative px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-gradient-to-r from-primary-600 to-purple-600 text-white font-bold text-base sm:text-lg shadow-lg hover:shadow-neon hover:scale-105 transition-all duration-300 flex items-center gap-2 group"
                        >
                            <span>View Gallery</span>
                            <svg
                                class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </a>
                        <a
                            href="#contact"
                            class="px-6 sm:px-8 py-3 sm:py-4 rounded-full border border-white/10 bg-white/5 text-white font-bold text-base sm:text-lg hover:bg-white/10 hover:border-white/30 transition-all backdrop-blur-sm hover:scale-105"
                        >
                            Connect
                        </a>
                    </div>
                </div>

                <!-- Right Content: Floating Artifacts -->
                <div
                    class="lg:col-span-5 relative flex justify-center items-center h-full order-1 lg:order-2 perspective-1000"
                >
                    <!-- Floating Tech (Background of ID) -->
                    <div
                        class="absolute inset-0 flex items-center justify-center -z-10 opacity-50 scale-100 lg:scale-150"
                    >
                        <FloatingTech />
                    </div>

                    <!-- Tilted ID Card -->
                    <div
                        class="transform rotate-y-[-15deg] rotate-x-[5deg] hover:rotate-0 transition-transform duration-700 ease-out w-3/4 sm:w-full max-w-[340px] lg:max-w-none"
                        data-tilt
                    >
                        <HolographicID />
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Section (3D Tilt Cards) -->
        <section id="projects" class="py-20 lg:py-32 relative overflow-hidden">
            <!-- Parallax Tech Background: Grid Mode -->
            <TechBackground theme="grid" speed={0.15} direction="down" />

            <div
                class="absolute top-0 right-0 w-[500px] h-[500px] bg-purple-600/10 rounded-full blur-[100px] pointer-events-none"
            >
            </div>

            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div
                    class="flex flex-col md:flex-row justify-between items-end mb-16 gap-4 text-center md:text-left"
                >
                    <div data-aos="fade-right" class="w-full md:w-auto">
                        <h2
                            class="text-4xl font-bold font-display text-white mb-4"
                        >
                            Featured Projects
                        </h2>
                        <p class="text-slate-400">
                            Selected works that showcase technical mastery.
                        </p>
                    </div>
                    <a
                        href="/projects"
                        class="text-primary-400 hover:text-white transition-colors flex items-center gap-2 mx-auto md:mx-0"
                    >
                        View All <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                        >
                    </a>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-16 lg:gap-20"
                >
                    {
                        projects.map((project, index) => (
                            <div
                                data-aos="fade-up"
                                data-aos-delay={index * 100}
                            >
                                <ProjectCard3D project={project} />
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Skills Section (Glass Cards) -->
        <section
            id="skills"
            class="py-20 lg:py-24 bg-dark-bg/50 relative overflow-hidden"
        >
            <!-- Parallax Tech Background: Binary Mode -->
            <TechBackground theme="binary" speed={0.1} direction="up" />

            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <h2
                    class="text-3xl font-bold font-display text-white text-center mb-10 lg:mb-16"
                    data-aos="zoom-in"
                >
                    Technologies & Arsenal
                </h2>
                <div
                    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 lg:gap-6"
                >
                    {
                        featuredSkills.map((skill, index) => (
                            <div
                                class="group p-4 rounded-xl bg-glass-gradient border border-white/5 hover:border-primary-500/50 transition-all hover:-translate-y-2 hover:shadow-neon backdrop-blur-sm cursor-default"
                                data-tilt
                                data-tilt-scale="1.1"
                                data-aos="fade-up"
                                data-aos-delay={index * 50}
                            >
                                <div class="flex flex-col items-center">
                                    <i
                                        class={`${skill.icon} text-4xl mb-3 text-slate-400 group-hover:text-white transition-colors drop-shadow-lg`}
                                    />
                                    <span class="text-sm font-medium text-slate-300 group-hover:text-primary-300">
                                        {skill.name}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Career Timeline Section -->
        <section id="career" class="py-20 lg:py-24 relative overflow-hidden">
            <!-- Parallax Tech Background: Circuit Mode -->
            <TechBackground theme="circuit" speed={0.1} direction="down" />

            <div
                class="absolute top-1/2 left-0 w-[500px] h-[500px] bg-primary-900/10 rounded-full blur-[120px] pointer-events-none -translate-y-1/2"
            >
            </div>

            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center mb-10 lg:mb-16" data-aos="fade-up">
                    <h2
                        class="text-3xl md:text-4xl font-bold font-display text-white mb-4"
                    >
                        Career Journey
                    </h2>
                    <p class="text-slate-400 max-w-2xl mx-auto">
                        My professional path and the milestones that defined it.
                    </p>
                </div>

                <CareerTimeline />
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="py-20 lg:py-32 relative overflow-hidden">
            <div
                class="absolute bottom-0 left-0 w-full h-[500px] bg-gradient-to-t from-primary-900/20 to-transparent pointer-events-none"
            >
            </div>

            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center mb-16" data-aos="fade-up">
                    <h2
                        class="text-3xl md:text-4xl font-bold font-display text-white mb-4"
                    >
                        Initialize Connection...
                    </h2>
                    <p class="text-slate-400 max-w-2xl mx-auto">
                        Ready to start your next mission? Select your preferred
                        communication channel or transmit your data below.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
                    <!-- Contact Info -->
                    <div
                        class="order-2 lg:order-1 space-y-8"
                        data-aos="fade-right"
                    >
                        <div
                            class="bg-dark-surface/50 border border-white/10 rounded-3xl p-8 backdrop-blur-xl hover:border-primary-500/30 transition-colors group"
                        >
                            <h3
                                class="text-xl font-bold text-white mb-6 flex items-center gap-3"
                            >
                                <span
                                    class="p-3 rounded-lg bg-primary-500/10 text-primary-400 group-hover:bg-primary-500/20 transition-colors"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-6 h-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                </span>
                                Direct Channel
                            </h3>
                            <div class="space-y-4">
                                <div>
                                    <p
                                        class="text-sm font-mono text-slate-500 mb-1"
                                    >
                                        EMAIL
                                    </p>
                                    <a
                                        href={`mailto:${siteData.contact.email}`}
                                        class="text-lg text-slate-300 hover:text-primary-400 transition-colors"
                                    >
                                        {siteData.contact.email}
                                    </a>
                                </div>
                                <div>
                                    <p
                                        class="text-sm font-mono text-slate-500 mb-1"
                                    >
                                        PHONE
                                    </p>
                                    <a
                                        href={`tel:${siteData.contact.phone}`}
                                        class="text-lg text-slate-300 hover:text-primary-400 transition-colors"
                                    >
                                        {siteData.contact.phone}
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div
                            class="bg-dark-surface/50 border border-white/10 rounded-3xl p-8 backdrop-blur-xl hover:border-primary-500/30 transition-colors group"
                        >
                            <h3
                                class="text-xl font-bold text-white mb-6 flex items-center gap-3"
                            >
                                <span
                                    class="p-3 rounded-lg bg-primary-500/10 text-primary-400 group-hover:bg-primary-500/20 transition-colors"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-6 h-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                        ></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                        ></path>
                                    </svg>
                                </span>
                                Base Location
                            </h3>
                            <div>
                                <p
                                    class="text-sm font-mono text-slate-500 mb-1"
                                >
                                    COORDINATES
                                </p>
                                <p class="text-lg text-slate-300">
                                    {siteData.contact.address}
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div
                        class="order-1 lg:order-2 rounded-3xl p-8 md:p-10 bg-dark-surface/50 border border-white/10 backdrop-blur-xl shadow-2xl relative overflow-hidden"
                        data-aos="zoom-in-left"
                    >
                        <div
                            class="absolute top-0 right-0 w-32 h-32 bg-primary-500/10 rounded-bl-full pointer-events-none"
                        >
                        </div>

                        <form
                            class="space-y-6 relative z-10"
                            name="contact"
                            method="POST"
                            data-netlify="true"
                        >
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    <label
                                        for="name"
                                        class="text-sm font-mono text-primary-400"
                                        >NAME</label
                                    >
                                    <input
                                        type="text"
                                        name="name"
                                        id="name"
                                        required
                                        class="w-full px-4 py-3 rounded-lg bg-dark-bg/80 border border-white/10 text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all placeholder:text-slate-700"
                                        placeholder="John_Doe"
                                    />
                                </div>
                                <div class="space-y-2">
                                    <label
                                        for="email"
                                        class="text-sm font-mono text-primary-400"
                                        >EMAIL</label
                                    >
                                    <input
                                        type="email"
                                        name="email"
                                        id="email"
                                        required
                                        class="w-full px-4 py-3 rounded-lg bg-dark-bg/80 border border-white/10 text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all placeholder:text-slate-700"
                                        placeholder="john@example.com"
                                    />
                                </div>
                            </div>
                            <div class="space-y-2">
                                <label
                                    for="message"
                                    class="text-sm font-mono text-primary-400"
                                    >DATA_PACKET</label
                                >
                                <textarea
                                    name="message"
                                    id="message"
                                    rows="4"
                                    required
                                    class="w-full px-4 py-3 rounded-lg bg-dark-bg/80 border border-white/10 text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all placeholder:text-slate-700"
                                    placeholder="Message content..."></textarea>
                            </div>
                            <button
                                type="submit"
                                class="w-full py-4 rounded-xl bg-gradient-to-r from-primary-600 to-purple-600 text-white font-bold font-display uppercase tracking-wider hover:opacity-90 hover:shadow-neon transition-all transform active:scale-95 flex items-center justify-center gap-2"
                            >
                                Transmit Message
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"
                                    ></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <FloatingWhatsAppProject />
        </section>
    </main>

    <Footer />

    <!-- Devicon -->
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />
</Layout>
